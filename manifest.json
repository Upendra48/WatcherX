{
    "manifest_version": 3,
    "name": "WatcherX - Twitter Tracker",
    "version": "1.0",
    "description": "Get notified when a specific Twitter (X) account tweets.",
    "permissions": ["storage", "notifications", "alarms", "scripting"],
    "host_permissions": ["https://twitter.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  